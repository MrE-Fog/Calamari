        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <Nullable>enable</Nullable>
        <PackageProjectUrl>https://github.com/OctopusDeploy/Sashimi/</PackageProjectUrl>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <LangVersion>8</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\artifacts\Calamari.AzureCloudService.zip" LinkBase="tools" Pack="true" PackagePath="tools/" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Azure.Common\Sashimi.Azure.Common.csproj" />
        <ProjectReference Include="..\Server.Contracts\Sashimi.Server.Contracts.csproj" />
        <PackageReference Include="Portable.BouncyCastle" Version="1.8.4" />
        <PackageReference Include="System.IO.FileSystem.AccessControl" Version="4.7.0" />
        <PackageReference Include="System.Security.Principal.Windows" Version="4.7.0" />
    </ItemGroup>

</Project>
