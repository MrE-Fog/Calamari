<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AssemblyName>Calamari.GoogleCloudScripting</AssemblyName>
        <OutputType>Exe</OutputType>
        <RuntimeIdentifiers>win-x64;win-x86;linux-x64;osx-x64;linux-arm;linux-arm64</RuntimeIdentifiers>
        <IsPackable>false</IsPackable>
    </PropertyGroup>
    <PropertyGroup Condition="!$([MSBuild]::IsOSUnixLike())">
        <TargetFrameworks>net452;net5.0</TargetFrameworks>
    </PropertyGroup>
    <PropertyGroup Condition="$([MSBuild]::IsOSUnixLike())">
        <TargetFramework>net5.0</TargetFramework>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Calamari.Common" Version="20.4.2" />
        <PackageReference Include="Calamari.Scripting" Version="14.1.3" />
    </ItemGroup>
    <ItemGroup>
        <EmbeddedResource Include="Scripts\*" />
    </ItemGroup>

</Project>
